@using BaseProject.App.Shared.Settings.Dialogs
@using BaseProject.Infrastructure.Store.App
@inherits FluxorComponent

@inject IDispatcher Dispatcher
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<MudList Clickable>
    <MudListSubheader>
        Storage
    </MudListSubheader>
    <MudListItem Icon="@Icons.Material.Filled.Delete"
                 IconColor="Color.Error"
                 Text="Clear Cache"
                 OnClick="OpenDialog" />
</MudList>

@code {

    protected override void OnInitialized()
    {
        base.OnInitialized();
        SubscribeToAction<ClearStorageAction>(result => { Snackbar.Add(message: "All settings were reset", severity: Severity.Warning); });
    }

    private async Task OpenDialog()
    {
        var dialog = await DialogService.ShowAsync<ClearCacheDialog>("Clear Cache");
        var result = await dialog.Result!;
        if (!result.Canceled)
        {
            Dispatcher.Dispatch(new ClearStorageAction());
        }
    }
}