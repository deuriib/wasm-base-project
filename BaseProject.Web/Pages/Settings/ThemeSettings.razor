@using BaseProject.Infrastructure.Store.Theme
@inherits FluxorComponent
@inject IState<ThemeState> ThemeState
@inject ThemeFacade ThemeFacade

<MudList T="string" Clickable>
    <MudListSubheader>
        Theme
    </MudListSubheader>
    <MudListItem Icon="@(ThemeState.Value.IsDarkMode 
                           ? Icons.Material.Rounded.LightMode 
                           : Icons.Material.Rounded.DarkMode)" IconColor="@(ThemeState.Value.IsDarkMode 
                                ? Color.Warning 
                                : Color.Dark )" Text="@(ThemeState.Value.IsDarkMode 
                           ? "Switch to Light Mode" 
                           : "Switch to Dark Mode")" OnClick="ChangeTheme" />
</MudList>

@code {
    private void ChangeTheme()
    {
        ThemeFacade.ToggleTheme();
    }
}