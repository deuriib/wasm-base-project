@inherits FluxorLayout
@inject IDispatcher Dispatcher

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.subtitle1">@Employee?.Name</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Filled.Save" OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">Save</MudButton>
        <MudButton StartIcon="@Icons.Filled.Cancel" OnClick="Cancel" Color="Color.Error" Variant="Variant.Outlined">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public Employee? Employee { get; set; }

    protected override async Task OnInitializedAsync()
    {
        MudDialog?.SetOptions(new DialogOptions() { DisableBackdropClick = true, CloseButton = false, CloseOnEscapeKey = false });
        await base.OnInitializedAsync();
    }

    private void Submit() => MudDialog?.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog?.Cancel();
}