@inherits FluxorComponent


<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h5">Are you sure you want to clear the cache?</MudText>
        <MudText Typo="Typo.body2">This will remove all cached data and reset the app to its initial state.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Material.Filled.Cancel" OnClick="Cancel" Color="Color.Primary" Variant="Variant.Filled">Cancel</MudButton>
        <MudButton StartIcon="@Icons.Material.Filled.Delete" OnClick="Submit" Color="Color.Error" Variant="Variant.Outlined">Clear cache</MudButton>
    </DialogActions>
</MudDialog>


@code {

    [CascadingParameter]
    MudDialogInstance? MudDialog { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        MudDialog?.SetOptions(new DialogOptions() { DisableBackdropClick = true, CloseButton = false, CloseOnEscapeKey = false, NoHeader = true });
    }

    void Submit() => MudDialog?.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog?.Cancel();
}