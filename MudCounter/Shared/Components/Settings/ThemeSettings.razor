
@inherits FluxorComponent
@inject IState<ThemeState> _themeState

<MudList Clickable>
    <MudListSubheader>
        Theme
    </MudListSubheader>
    <MudListItem Icon="@(_themeState.Value.isDarkMode ? Icons.Material.Rounded.LightMode : Icons.Material.Rounded.DarkMode)"
                 IconColor="@(_themeState.Value.isDarkMode ? Color.Warning : Color.Dark )"
                 Text="@(_themeState.Value.isDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")"
                 OnClick="ChangeTheme" />
</MudList>

@code {
    [Inject]
    private IDispatcher? Dispatcher { get; set; }

    private void ChangeTheme()
    {
        Dispatcher?.Dispatch(new ToggleThemeAction());
    }
}
